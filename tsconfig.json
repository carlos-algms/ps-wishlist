{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2019",
    "moduleResolution": "node",
    "outDir": "dist",
    "lib": ["ES2019", "DOM"],
    "sourceMap": true,
    "baseUrl": "./",
    "rootDir": "src",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true,
    "newLine": "lf",
    "removeComments": false,
    "jsx": "react-jsxdev",
    "skipLibCheck": true
  },
  "include": ["src/**/*.tsx", "src/**/*.ts"],
  "exclude": ["node_modules", ".vscode-test", "build"]
}
